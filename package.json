{
  "name": "covenant",
  "version": "0.0.5",
  "description": "Covenant is a 52-line Promises/A+ implementation written in Coffeescript. Covenant passes the Promises/A+ Test Suite. It compiles to under 200 lines of javascript, less than 500 bytes without compression.",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha -G -R dot --compilers :coffee-script test/*.coffee",
    "build": "npm run-script buildPromise",
    "buildPromise": "node_modules/.bin/coffee -j index.coffee -cm bestTick.coffee covenant.coffee promise.coffee",
    "buildCovenant": "node_modules/.bin/coffee -j index.coffee -cm bestTick.coffee covenant.coffee",
    "uglifyjs": "node_modules/.bin/uglifyjs index.js > index.js.min"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/wizardwerdna/covenant.git"
  },
  "author": "Andrew C. Greenberg (wizardwerdna@gmail.com)",
  "license": "BSD",
  "dependencies": {},
  "devDependencies": {
    "should": "~1.2.2",
    "mocha": "~1.8.2",
    "promises-aplus-tests": "promises-aplus/promises-tests",
    "coffee-script": "~1.6.1",
    "jslint": "~0.1.9",
    "uglify-js": "~2.2.5"
  },
  "keywords": [
    "promise",
    "promises",
    "async",
    "asynchronous",
    "deferred"
  ]
}
